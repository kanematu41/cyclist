<div class="container">
	<div class="row">
		<div class="col">
			<h3><%= @user.name %>さん</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-2 col-xs-offset-1">
			<%= attachment_image_tag(@user, :image, size:"200x200", fallback:"no_image.png") %>
		</div>

		<div class="col-xs-5 col-xs-offset-1">
			<table class="table">
				<tr>
					<th>名前</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>自己紹介</th>
					<th><%= @user.introduction %></th>
				</tr>
				<tr>
					<th>フォロー</th>
					<th><%= @user.follower.count %></th>
				</tr>
				<tr>
					<th>フォロワー</th>
					<th><%= @user.followed.count %></th>
				</tr>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<hr>
			<% @user.posts.each do |post| %>
				<div class="my-box-search">
					<%= link_to admins_post_path(post) do %>
					<%= image_tag post.image[0].to_s, size:"250x250" %><br>
					<% end %>
					<div class="search-title">
						<i class="far fa-thumbs-up">
							<%= post.likes.count %></i>
						<i class="far fa-comment">
							<%= post.comments.count %></i>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>