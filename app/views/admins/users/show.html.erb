<div class="container">
	<div class="row">
		<div class="col">
			<h3><%= @user.name %>さん</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-2 col-xs-offset-1">
			<%= attachment_image_tag(@user, :image, size:"200x200", fallback:"no_image.png") %>
		</div>

		<div class="col-xs-5 col-xs-offset-1">
			<table class="table">
				<tr>
					<th>名前</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>自己紹介</th>
					<th><%= @user.introduction %></th>
				</tr>
				<tr>
					<th>フォロー</th>
					<th><%= @user.follower.count %></th>
				</tr>
				<tr>
					<th>フォロワー</th>
					<th><%= @user.followed.count %></th>
				</tr>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<div class="tab_wrap">
				<input id="tab1" type="radio" name="tab_btn" checked>
				<input id="tab2" type="radio" name="tab_btn">
				<input id="tab3" type="radio" name="tab_btn">

				<div class="tab_area">
				 	<label class="tab1_label" for="tab1">投稿数</label>
				 	<label class="tab2_label" for="tab2">いいね数</label>
				 	<label class="tab3_label" for="tab3">コメント数</label>
				</div>

				<div class="panel_area">
				 	<div id="panel1" class="tab_panel">
				 		投稿数 : <%= @user.posts.count %>
				 		<p><%= line_chart @post_data, xtitle: "日付", ytitle: "回数", discrete: true %></p>
				 	</div>
				 	<div id="panel2" class="tab_panel">
				 		いいね数 : <%= @user.likes.count %>
				 		<p><%= line_chart @like_data, xtitle: "日付", ytitle: "回数", discrete: true %></p>
				 	</div>
				 	<div id="panel3" class="tab_panel">
				 		コメント数 : <%= @user.comments.count %>
				 		<p><%= line_chart @comment_data, xtitle: "日付", ytitle: "回数", discrete: true %></p>
				 	</div>
				</div>
			</div>
		</div>
	</div>
</div>