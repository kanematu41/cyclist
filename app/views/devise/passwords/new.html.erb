<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'layouts/flash_messages' %>
      <div class="sign-title">
        <h3>パスワード再設定</h3>
      </div>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="sign-message">
        <%= devise_error_messages %>
      </div>
      <div class="form-group sign-form">
        <table class="table devise-table">
          <tr>
            <th class="col-xs-5">メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="sign-submit">
    		<%= f.submit "メール送信",class: "btn btn-lg btn-primary btn-block" %>
    	</div>
    </div>
  </div>
<% end %>

  <div class="row">
    <div class="col-xs-4 col-xs-offset-8">
      <%= link_to '新規登録', new_user_registration_path %><br>
      <%= link_to 'ログイン', new_user_session_path %>
    </div>
  </div>
</div>
