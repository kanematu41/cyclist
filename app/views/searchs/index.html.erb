<div class="container">
	<div class="row">
		<div class="col">

			<% if @user_or_post == "1" %>
				<h4>User</h4>
				<table class="table">
					<% @users.each do |user| %>
						<thead>
							<tr>
								<th><%= attachment_image_tag(user, :image, size: "50x50", fallback: "no_image.png") %></th>
								<th><%= link_to user_path(user) do %>
										<%= user.name %>
										<% end %>
								</th>
							</tr>
						</thead>
					<% end %>
				</table>

				<% else %>
					<h4>Post</h4>
					<hr>
					<div class="recipes_index">
					<% @posts.each do |post| %>
						<div class="my-box-search">
							<%= link_to post_path(post) do %>
							<%= image_tag post.image[0].to_s, size:"250x250" %><br>
							<% end %>
							<div class="search-title">
							<%= post.title %><!-- css乱れる -->
							</div>
						</div>
					<% end %>
					</div>
					<% end %>

		</div>
	</div>
</div>
