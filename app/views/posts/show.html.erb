<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col">
			<h3>投稿詳細</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6 col-xs--offset-3">
			<div class="postbox">
				<%= attachment_image_tag(@post.user, :image, size:"50x50", fallback: "no_image.png") %>
				<%= link_to user_path(@post.user) do %>
				<%= @post.user.name %>
				<% end %>
			<div class="bxslider"><!-- js画像スライダー -->
				<% @post.image.each do |image| %>
					<%= image_tag(image.url, class:"post-image") %>
				<% end %>
			</div>
			<hr>
			<label>title</label>
			<%= @post.title %><br>
			<label>body</label>
			<%= @post.body %><br>

			<% if @post.user_id == current_user.id %>
			<%= link_to "編集", edit_post_path(@post) %>
			<%= link_to "削除", post_path(@post), method: :delete %>
			<% end %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<h4>コメント</h4>
			<table class="table">
				<% @post.comments.each do |comment| %>
					<tr>
						<td>
							<%= link_to(comment.user) do %>
							<%= attachment_image_tag(comment.user, :image, size:"50x50", fallback:"no_image.png") %>
							<% end %>
						</td>
						<td><%= comment.comment %></td>
						<% if comment.user_id == current_user.id %>
						<td><%= link_to "削除", post_comments_path(comment), method: :delete, class:"pull-right" %></td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-7 col-xs-offset-5">
			<%= form_for [@post, @comment] do |f| %>
				<%= f.text_area :comment, rows:"5", class:"form-control", placeholder:"コメントここに" %>
				<%= f.submit "送信する", class:"pull-right" %>
			<% end %>
		</div>
	</div>
</div>
