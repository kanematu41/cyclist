<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h3>投稿一覧</h3>
				<% @posts.each do |post| %>
					<div class="postbox">
						<%= attachment_image_tag(post.user, :image, size:"50x50", fallback:"no_image.png") %>
						<%= post.user.name %>
						<%= post.created_at.strftime('%Y/%m/%d') %>
						<%= link_to post_path(post) do %>
						<%= image_tag post.image[0].to_s, class:"post-image" %><!-- 画像1枚表示 -->
						<% end %>
						<%= post.title %>
					</div>
				<% end %>
				<%= paginate @posts %> <!-- 新着順 -->
		</div>
	</div>
</div>
